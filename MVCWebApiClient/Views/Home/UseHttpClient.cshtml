@model IEnumerable<MVCWebApiClient.Product>

@{
    ViewBag.Title = "UseHttpClient";
}

<h2>UseHttpClient</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-2">Name:</div>
            <div class="col-md-10">
                @Html.TextBox("Name", null, new { placeholder = "Enter Product Name", @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                Category Name:
            </div>
            <div class="col-md-10">
                @Html.TextBox("CategoryName", null, new { placeholder = "Enter Category Name", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                Price:
            </div>
            <div class="col-md-10">
                @Html.TextBox("Price", null, new { placeholder = "Enter Price", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductId }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }
</table>

@Html.ActionLink("back to index", "Index")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/PageScripts/UseHttpClient.js")
}
